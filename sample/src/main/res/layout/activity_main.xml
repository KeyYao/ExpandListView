<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/all_can_open_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="所有Item都允许打开"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/all_item_open_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="默认打开所有Item"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/one_open_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="一次只能打开一个Item"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/can_not_click_close_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="点击不关闭Item"
        android:textAllCaps="false" />

</LinearLayout>
